---
import { Icon } from "astro-icon";

const styles = {
  note: {
    container: "bg-primary-50 dark:bg-gray-800/60 dark:ring-1 dark:ring-gray-300/10",
    title: "text-primary-900 dark:text-primary-400",
    body: "text-primary-800 [--tw-prose-background:theme(colors.amber.50)] prose-a:text-primary-900 prose-code:text-primary-900 dark:text-gray-300 dark:prose-code:text-gray-300",
  },
  warning: {
    container: "bg-primary-50 dark:bg-gray-800/60 dark:ring-1 dark:ring-gray-300/10",
    title: "text-primary-900 dark:text-primary-500",
    body: "text-primary-800 [--tw-prose-underline:theme(colors.amber.400)] [--tw-prose-background:theme(colors.amber.50)] prose-a:text-primary-900 prose-code:text-primary-900 dark:text-gray-300 dark:[--tw-prose-underline:theme(colors.amber.700)] dark:prose-code:text-gray-300",
  },
};

let { type = 'note', title = null} = Astro.props;
---

<div class={`my-8 flex rounded-3xl p-6 ${styles[type].container}`}>
  {type == 'note' && <Icon name="heroicons:light-bulb" class="flex-none w-8 h-8" />}
  {type == 'warning' && <Icon name="heroicons:exclamation-circle" class="flex-none w-8 h-8 text-orange-500" />}
  <div class="flex-auto ms-4">
    {title && <p class={`m-0 font-display text-xl mb-2.5 ${styles[type].title}`}>{title}</p>}
    <div class={`prose ${styles[type].body}`}><slot /></div>
  </div>
</div>
