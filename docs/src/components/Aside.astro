---
import { Icon } from "astro-icon/components";

interface Props {
    variant: "tip" | "warning" | "danger" | "info";
}

const { variant } = Astro.props as Props;
---

<div
    class:list={[
        "mb-6 rounded-lg border-s-4 px-4 py-3 prose-p:my-0",
        {
            "border-purple-400 bg-purple-400/10 text-purple-950 dark:bg-purple-500/20 dark:text-purple-100 prose-code:[p_&]:bg-purple-600/10 prose-code:dark:[p_&]:bg-white/20":
                variant === "tip",
            "border-yellow-400 bg-yellow-400/10 text-yellow-950 dark:bg-yellow-500/20 dark:text-yellow-100 prose-code:[p_&]:bg-yellow-600/10 prose-code:dark:[p_&]:bg-white/20":
                variant === "warning",
            "border-red-400 bg-red-400/10 text-red-950 dark:bg-red-500/20 dark:text-red-100 prose-code:[p_&]:bg-red-600/10 prose-code:dark:[p_&]:bg-white/20": variant === "danger",
            "border-sky-400 bg-sky-400/10 text-sky-950 dark:bg-sky-500/20 dark:text-sky-100 prose-code:[p_&]:bg-sky-600/10 prose-code:dark:[p_&]:bg-white/20": variant === "info",
        },
    ]}
>
    <div class="flex items-center gap-2 pb-2">
        <Icon name={variant} class="h-6 w-6" aria-hidden="true" />

        <p class="text-sm font-bold">{variant === 'tip' ? 'TIP' : 'NOTE'}</p>
    </div>

    <slot />
</div>
