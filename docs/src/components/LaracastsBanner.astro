---
import filamentLogo from '@assets/laracasts/filament-laracasts-logo.webp'
import laracastsLogo from '@assets/laracasts/laracasts.svg'

const { title, description, url, series } = Astro.props;

let instructorName
let instructorAvatar
let instructorTwitter
let instructorWebsite
let instructorGitHub

if (series === 'building-advanced-components') {
    instructorName = 'Dan Harrin'
    instructorAvatar = 'https://avatars.githubusercontent.com/u/41773797?v=4'
    instructorTwitter = 'https://twitter.com/danjharrin'
    instructorWebsite = 'https://danharrin.com'
    instructorGitHub = 'https://github.com/danharrin'
} else if (series === 'rapid-laravel-development') {
    instructorName = 'Kevin McKee'
    instructorAvatar = 'https://avatars.githubusercontent.com/u/4503765?v=4'
    instructorTwitter = 'https://twitter.com/iAmKevinMcKee'
    instructorWebsite = 'https://kevinmckee.me'
    instructorGitHub = 'https://github.com/iAmKevinMcKee'
}
---

<div
  class="not-prose w-full max-w-5xl p-8 min-[900px]:p-10 rounded-2xl bg-gradient-to-t from-[#101E34] to-[#1A3053] text-white flex gap-3 min-[900px]:gap-10 items-start flex-col min-[900px]:flex-row"
>
  <div class="flex min-[900px]:flex-col items-center gap-y-3 gap-x-5 shrink-0 min-[900px]:pt-1.5">
    <!-- Filament Logo -->
    <img
      src={filamentLogo}
      alt="Filament"
      class="w-20 min-[900px]:w-28"
    />

    <!-- Laracasts Logo -->
    <img
      src={laracastsLogo}
      alt="Laracasts"
      class="w-32"
    />
  </div>
  <div class="flex-1">
    <!-- Title -->
    <div class="font-bold text-xl sm:text-2xl">
        {title}
    </div>

    <!-- Description -->
    <div class="pt-2 text-[#BAD9FC] text-sm leading-relaxed">
        {description}
    </div>

    <!-- Link -->
    <div class="flex pt-5">
      <a
        href={`${url}?referer=DanHarrin`}
        target="_blank"
        class="rounded-full px-12 py-2 bg-[#1B3152] flex justify-center gap-3 items-center text-sm transition duration-300 hover:bg-[#1b395f]"
      >
        <!-- Play Button Icon -->
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="22"
          height="22"
          viewBox="0 0 24 24"
          ><path
            fill="currentColor"
            d="M9.5 15.584V8.416a.5.5 0 0 1 .77-.42l5.576 3.583a.5.5 0 0 1 0 .842l-5.576 3.584a.5.5 0 0 1-.77-.42Z"
          ></path><path
            fill="currentColor"
            d="M1 12C1 5.925 5.925 1 12 1s11 4.925 11 11s-4.925 11-11 11S1 18.075 1 12Zm11-9.5A9.5 9.5 0 0 0 2.5 12a9.5 9.5 0 0 0 9.5 9.5a9.5 9.5 0 0 0 9.5-9.5A9.5 9.5 0 0 0 12 2.5Z"
          ></path></svg
        >

        <!-- Label -->
        <div>Play Video</div>
      </a>
    </div>
  </div>

  <!-- Author -->
  <div
    class="pt-5 min-[900px]:pt-0 flex min-[900px]:flex-col items-center min-[900px]:text-center gap-x-5 gap-y-2 shrink-0 min-[900px]:px-3"
  >
    <!-- Photo -->
    <img
      src={instructorAvatar}
      alt={instructorName}
      class="w-24 h-24 rounded-full"
    />

    <!-- Information -->
    <div>
      <!-- Name -->
      <div class="font-semibold">
          {instructorName}
      </div>

      <!-- Title -->
      <div class="text-[#BAD9FC] font-medium text-sm">
          Instructor
      </div>

      <!-- Social Media Links -->
      <div class="pt-2 flex flex-wrap items-center gap-2.5 text-[#BAD9FC]">
        <!-- Twitter -->
        <a
          target="_blank"
          href={instructorTwitter}
          class="group/twitter-link relative grid h-8 w-8 place-items-center rounded-full bg-[#1C3E66] hover:text-white motion-reduce:transition-none"
        >
          <svg
            width="30"
            height="30"
            class="relative w-[1.2rem] transition duration-300 group-hover/twitter-link:scale-0 group-hover/twitter-link:opacity-0"
            fill="none"
            viewBox="0 0 40 40"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M37.02 9.427c-1.272.562-2.62.932-4.002 1.096a6.991 6.991 0 0 0 3.064-3.856 13.935 13.935 0 0 1-4.425 1.691 6.97 6.97 0 0 0-11.877 6.357A19.79 19.79 0 0 1 5.412 7.432a6.947 6.947 0 0 0-.944 3.505 6.973 6.973 0 0 0 3.1 5.801 6.947 6.947 0 0 1-3.156-.871v.084a6.975 6.975 0 0 0 5.591 6.837 7.008 7.008 0 0 1-3.15.12 6.975 6.975 0 0 0 6.514 4.842 13.99 13.99 0 0 1-10.32 2.887A19.719 19.719 0 0 0 13.73 33.77c12.823 0 19.833-10.622 19.833-19.834 0-.3-.006-.603-.02-.901a14.17 14.17 0 0 0 3.477-3.608Z"
              fill="currentColor"
            ></path>
          </svg>

          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 16 16"
            class="absolute right-1/2 top-1/2 -translate-y-1/2 translate-x-1/2 scale-0 opacity-0 transition duration-300 group-hover/twitter-link:scale-100 group-hover/twitter-link:opacity-100"
            fill="none"
          >
            <path
              d="M12.6182 0.80542H15.0592L9.72628 6.90056L16 15.1947H11.0877L7.24026 10.1643L2.83789 15.1947H0.395405L6.09945 8.67524L0.0810547 0.80542H5.11803L8.5958 5.40334L12.6182 0.80542ZM11.7614 13.7336H13.114L4.38307 2.18974H2.9316L11.7614 13.7336Z"
              fill="currentColor"
            ></path>
          </svg>
        </a>
        <!-- Website -->
        <a
          target="_blank"
          href={instructorWebsite}
          class="grid h-8 w-8 place-items-center rounded-full bg-[#1C3E66] transition duration-300 hover:text-white motion-reduce:transition-none"
        >
          <svg
            class="w-5"
            xmlns="http://www.w3.org/2000/svg"
            width="32"
            height="32"
            viewBox="0 0 32 32"
          >
            <path
              fill="currentColor"
              d="M16 2a14 14 0 1 0 14 14A14.016 14.016 0 0 0 16 2ZM4.02 16.394l1.338.446L7 19.303v1.283a1 1 0 0 0 .293.707L10 24v2.377a11.994 11.994 0 0 1-5.98-9.983ZM16 28a11.968 11.968 0 0 1-2.572-.285L14 26l1.805-4.512a1 1 0 0 0-.097-.926l-1.411-2.117a1 1 0 0 0-.832-.445h-4.93l-1.248-1.873L9.414 14H11v2h2v-2.734l3.868-6.77l-1.736-.992L14.277 7h-2.742L10.45 5.371A11.861 11.861 0 0 1 20 4.7V8a1 1 0 0 0 1 1h1.465a1 1 0 0 0 .832-.445l.877-1.316A12.033 12.033 0 0 1 26.894 11H22.82a1 1 0 0 0-.98.804l-.723 4.47a1 1 0 0 0 .54 1.055L25 19l.685 4.056A11.98 11.98 0 0 1 16 28Z"
            ></path>
          </svg>
        </a>
        <!-- GitHub -->
        <a
          target="_blank"
          href={instructorGitHub}
          class="grid h-8 w-8 place-items-center rounded-full bg-[#1C3E66] transition duration-300 hover:text-white motion-reduce:transition-none"
        >
          <svg
            class="w-5"
            fill="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
              clip-rule="evenodd"
            ></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</div>
