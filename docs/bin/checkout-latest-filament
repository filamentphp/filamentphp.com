#!/bin/bash

DOCS_VERSIONS=(
    1.x
    2.x
    3.x
    4.x
)

for v in "${DOCS_VERSIONS[@]}"; do
    if [ -d "filament/$v" ]; then
        echo "Updating $v..."
        (cd filament/$v && git fetch origin)
    else
        echo "Cloning $v..."
        git clone -b "$v" git@github.com:filamentphp/filament.git "filament/$v"
    fi

    echo "Checking out latest commit on $v..."
    (cd filament/$v && git checkout -f "$v" && git pull origin "$v")
done
